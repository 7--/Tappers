<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="com.example.zack.tapperstesting.contact.NewContact">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Contact"
        android:id="@+id/contact_title"
        android:fontFamily="sans-serif-light"
        android:textAlignment="gravity"
        android:gravity="center"
        android:maxHeight="80dp"
        android:textSize="28dp"
        android:maxLines="1"
        android:minHeight="55dp"
        android:paddingBottom="5dp"
        android:minWidth="700dp"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:background="@drawable/title_border"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="54.5dp"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:textSize="17dp"
        android:id="@+id/lblBackContactsNew"
        android:text="Menu"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="54.5dp"
        android:id="@+id/btnBackNewContact"
        android:background="@null"
        android:scaleType="fitCenter"
        android:paddingRight="40dp"
        android:cropToPadding="true"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:src="@drawable/back_arrow"
        android:layout_above="@+id/txtTotal"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contact_title">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#0b0c0e"
                android:text="Contact Name"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:paddingTop="10dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/lblContactName"
                android:layout_centerHorizontal="true"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:textSize="14dp"
                android:capitalize="words"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:fontFamily="sans-serif-light"
                android:ems="10"
                android:id="@+id/txtContactName"
                android:layout_below="@+id/lblContactName"
                android:layout_centerHorizontal="true" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtContactName"
                android:textColor="#0b0c0e"
                android:text="Transaction Amount"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/lblTransaction"
                android:layout_centerHorizontal="true"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginEnd="30dp"
                android:textSize="14dp"
                android:text="0"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:fontFamily="sans-serif-light"
                android:ems="10"
                android:id="@+id/txtTransaction"
                android:layout_below="@+id/lblTransaction" />


            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtTransaction"
                android:layout_marginLeft="-20dp"
                android:layout_alignTop="@+id/txtTransaction"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:layout_marginRight="10dp"
                    android:checked="true"
                    android:id="@+id/rdbTo"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:id="@+id/rdbFrom"
                    android:layout_gravity="right" />

            </RadioGroup>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTransaction"
                android:textColor="#0b0c0e"
                android:text="Reason"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/lblReason"
                android:layout_centerHorizontal="true"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:inputType="textAutoCorrect"
                android:fontFamily="sans-serif-light"
                android:text=""
                android:ems="10"
                android:id="@+id/txtReason"
                android:layout_below="@+id/lblReason"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtReason"
                android:textColor="#0b0c0e"
                android:text="Date"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/lblDate"
                android:layout_centerHorizontal="true"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Pick new Date"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/btnPickNewDate"
                android:layout_below="@+id/lblDate"
                android:layout_toEndOf="@+id/lblSetDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date Selected: 14/12/2015"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:id="@+id/lblSetDate"
                android:layout_alignTop="@+id/btnPickNewDate"
                android:layout_alignParentStart="true" />




            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblSetDate"
                android:textColor="#0b0c0e"
                android:text="Characters"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/lblCharacters"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/backgroundChararcters"
                android:layout_below="@+id/lblCharacters"
                android:background="#ffffff">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="73dp"
                    android:gravity="center_vertical"
                    android:background="@null">

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:id="@+id/char_default_male"
                        android:scaleType="fitCenter"
                        android:background="@drawable/bgcol_blue"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/male"
                        />

                    <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:layout_marginRight="6dp"

                    android:id="@+id/char_default_female"
                    android:layout_toEndOf="@+id/char_default_male"
                    android:src="@drawable/female"/>

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="6dp"

                        android:id="@+id/char_stoner_bob"
                        android:layout_toEndOf="@+id/char_default_female"
                        android:src="@drawable/stoner_bob"/>

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="6dp"

                        android:id="@+id/char_goth_girl"
                        android:layout_toEndOf="@+id/char_stoner_bob"
                        android:src="@drawable/goth_girl"/>

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="6dp"

                        android:id="@+id/char_stoner_bob_alt"
                        android:layout_toEndOf="@+id/char_goth_girl"
                        android:src="@drawable/stoner_bob_alt"/>

                </RelativeLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backgroundChararcters"
                android:textColor="#0b0c0e"
                android:text="Background Colour"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/lblBackgroundColours"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/backgroundColours"
                android:layout_below="@+id/lblBackgroundColours"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="73dp"
                    android:gravity="center_vertical"
                    android:background="@null">
                    
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bgcol_default"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/bgcol_default"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bgcol_blue"
                        android:background="@drawable/bgcol_blue"
                        android:layout_marginRight="6dp"
                        android:layout_toEndOf="@+id/bgcol_default" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bgcol_green"
                        android:background="@drawable/bgcol_green"
                        android:layout_marginRight="6dp"
                        android:layout_toEndOf="@+id/bgcol_blue" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_turq"
                        android:background="@drawable/bgcol_turq"
                        android:layout_toEndOf="@+id/bgcol_green" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_purple"
                        android:background="@drawable/bgcol_purple"
                        android:layout_toEndOf="@+id/bgcol_turq" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_pink"
                        android:background="@drawable/bgcol_pink"
                        android:layout_toEndOf="@+id/bgcol_purple" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_red"
                        android:background="@drawable/bgcol_red"
                        android:layout_toEndOf="@+id/bgcol_pink" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_orange"
                        android:background="@drawable/bgcol_orange"
                        android:layout_toEndOf="@+id/bgcol_red" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_gold"
                        android:background="@drawable/bgcol_gold"
                        android:layout_toEndOf="@+id/bgcol_orange" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_yellow"
                        android:background="@drawable/bgcol_yellow"
                        android:layout_toEndOf="@+id/bgcol_gold" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_black"
                        android:background="@drawable/bgcol_black"
                        android:layout_toEndOf="@+id/bgcol_yellow" />

                </RelativeLayout>

            </HorizontalScrollView>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Confirm"
                android:id="@+id/cmdConfirm"
                android:layout_below="@+id/backgroundColours"
                android:gravity="center"/>

        </RelativeLayout>



    </ScrollView>


</RelativeLayout>
