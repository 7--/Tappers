<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="org.tappers.contact.NewContact">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/my_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0b0c0e"
                android:text="@string/name"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/lblContactName" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:hint="@string/example_name"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:fontFamily="sans-serif-light"
                android:ems="10"
                android:id="@+id/txtContactName"
                android:paddingTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/lblContactName"
                android:layout_toEndOf="@+id/lblContactName" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblContactName"
                android:paddingTop="10dp"
                android:id="@+id/radGroup"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_owe_me"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:checked="true"
                    android:id="@+id/rdbTo"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_owe_you"
                    android:id="@+id/rdbFrom"
                    android:layout_gravity="end" />

            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0b0c0e"
                android:text="@string/amount"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:paddingTop="10dp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/radGroup"
                android:id="@+id/lblAmount"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:hint="@string/amount_hint"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:fontFamily="sans-serif-light"
                android:ems="10"
                android:id="@+id/txtTransaction"
                android:layout_below="@+id/radGroup"
                android:layout_toEndOf="@+id/lblAmount"
                android:layout_toRightOf="@+id/lblAmount"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0b0c0e"
                android:text="@string/reason"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="10dp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/lblAmount"
                android:id="@+id/lblReason"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:hint="@string/reason_hint"
                android:layout_height="wrap_content"
                android:inputType="textAutoCorrect"
                android:fontFamily="sans-serif-light"
                android:text=""
                android:ems="10"
                android:id="@+id/txtReason"
                android:paddingTop="10dp"
                android:layout_alignTop="@+id/lblReason"
                android:layout_toEndOf="@+id/lblReason"
                android:layout_toRightOf="@+id/lblReason"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtReason"
                android:textColor="#0b0c0e"
                android:text="@string/date"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="10dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/lblDate"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/select_date"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/btnPickNewDate"
                android:layout_below="@+id/txtReason"
                android:paddingTop="10dp"
                android:layout_toEndOf="@+id/lblSetDate"
                android:layout_toRightOf="@+id/lblSetDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"
                android:id="@+id/lblSetDate"
                android:layout_below="@+id/txtReason"
                android:paddingTop="10dp"
                android:layout_toEndOf="@+id/lblDate"
                android:layout_toRightOf="@+id/lblDate"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnPickNewDate"
                android:textColor="#0b0c0e"
                android:text="@string/image_character"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/lblCharacters"
                android:layout_marginBottom="5dp"
                />

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:id="@+id/backgroundCharacters"
                android:layout_below="@+id/lblCharacters"
                android:fillViewport="true"
                android:background="#f1f1f1">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:focusable="false"
                    android:background="@null">

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:id="@+id/char_default_male"
                        android:scaleType="fitCenter"
                        android:background="@drawable/bgcol_blue"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/male_small"
                        />

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/char_default_female"
                        android:layout_toEndOf="@+id/char_default_male"
                        android:layout_toRightOf="@+id/char_default_male"
                        android:src="@drawable/female_small" />

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/char_stoner_bob"
                        android:layout_toEndOf="@+id/char_default_female"
                        android:layout_toRightOf="@+id/char_default_female"
                        android:src="@drawable/stoner_bob_small"/>

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:id="@+id/char_goth_girl"
                        android:layout_toEndOf="@+id/char_stoner_bob"
                        android:layout_toRightOf="@+id/char_stoner_bob"
                        android:src="@drawable/goth_girl_small"/>


                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:id="@+id/char_red_dress"
                        android:layout_toEndOf="@+id/char_goth_girl"
                        android:layout_toRightOf="@+id/char_goth_girl"
                        android:src="@drawable/red_dress_female_small"/>

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/char_stoner_bob_alt"
                        android:layout_toEndOf="@+id/char_red_dress"
                        android:layout_toRightOf="@+id/char_red_dress"
                        android:src="@drawable/stoner_bob_alt_small"/>

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/char_abudady"
                        android:layout_toEndOf="@+id/char_stoner_bob_alt"
                        android:layout_toRightOf="@+id/char_stoner_bob_alt"
                        android:src="@drawable/abudady_small"/>

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:id="@+id/char_abiba"
                        android:layout_toEndOf="@+id/char_abudady"
                        android:layout_toRightOf="@+id/char_abudady"
                        android:src="@drawable/abiba_small"/>

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:id="@+id/char_gamer_bob"
                        android:layout_toEndOf="@+id/char_abiba"
                        android:layout_toRightOf="@+id/char_abiba"
                        android:src="@drawable/gamer_bob_small"/>


                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:id="@+id/char_blue_dress"
                        android:layout_toEndOf="@+id/char_gamer_bob"
                        android:layout_toRightOf="@+id/char_gamer_bob"
                        android:src="@drawable/blue_dress_female_small"/>

                </RelativeLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backgroundCharacters"
                android:textColor="#0b0c0e"
                android:text="@string/background"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/lblBackgroundColours"
                android:layout_marginBottom="5dp"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/backgroundColours"
                android:layout_below="@+id/lblBackgroundColours"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="73dp"
                    android:gravity="center_vertical"
                    android:background="#f1f1f1">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bgcol_default"
                        android:layout_marginRight="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/bgcol_default"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bgcol_blue"
                        android:background="@drawable/bgcol_blue"
                        android:layout_marginRight="6dp"
                        android:layout_toEndOf="@+id/bgcol_default"
                        android:layout_toRightOf="@+id/bgcol_default" />


                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bgcol_green"
                        android:background="@drawable/bgcol_green"
                        android:layout_marginRight="6dp"
                        android:layout_toEndOf="@+id/bgcol_blue"
                        android:layout_toRightOf="@+id/bgcol_blue" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_turq"
                        android:background="@drawable/bgcol_turq"
                        android:layout_toEndOf="@+id/bgcol_green"
                        android:layout_toRightOf="@+id/bgcol_green"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_purple"
                        android:background="@drawable/bgcol_purple"
                        android:layout_toEndOf="@+id/bgcol_turq"
                        android:layout_toRightOf="@+id/bgcol_turq"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginEnd="6dp"
                        android:id="@+id/bgcol_pink"
                        android:background="@drawable/bgcol_pink"
                        android:layout_toRightOf="@+id/bgcol_purple"
                        android:layout_toEndOf="@+id/bgcol_purple" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_red"
                        android:background="@drawable/bgcol_red"
                        android:layout_toEndOf="@+id/bgcol_pink"
                        android:layout_toRightOf="@+id/bgcol_pink" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_orange"
                        android:background="@drawable/bgcol_orange"
                        android:layout_toEndOf="@+id/bgcol_red"
                        android:layout_toRightOf="@+id/bgcol_red"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_gold"
                        android:background="@drawable/bgcol_gold"
                        android:layout_toEndOf="@+id/bgcol_orange"
                        android:layout_toRightOf="@+id/bgcol_orange"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_yellow"
                        android:background="@drawable/bgcol_yellow"
                        android:layout_toEndOf="@+id/bgcol_gold"
                        android:layout_toRightOf="@+id/bgcol_gold"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/bgcol_black"
                        android:background="@drawable/bgcol_black"
                        android:layout_toEndOf="@+id/bgcol_yellow"
                        android:layout_toRightOf="@+id/bgcol_yellow"/>

                </RelativeLayout>

            </HorizontalScrollView>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/confirm"
                android:id="@+id/cmdConfirm"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/backgroundColours"
                android:gravity="center"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
