<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zack.tapperstesting" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewContact"
            android:label="@string/title_activity_new_contact"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ContactPage"
            android:label="@string/title_activity_contact_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".NewTransaction"
            android:label="@string/title_activity_new_transaction" >
        </activity>
    </application>

</manifest>
